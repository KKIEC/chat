%h4.ui.center.aligned.medium.icon.header
  %i.circular.orange.comments.icon
  Say something

%div.ui.two.column.grid
  %div.twelve.wide.column
    %div.ui.fluid.raised.card.chatbox
      %div.content{ id: "messages" }
        %div.ui.feed{ id: "message-container" }
          = render @messages

      %div.extra.content
        = form_for(@message, html: { class: 'ui reply form', role: 'form' }, url: message_path, remote: true) do |f|
          %div.field
            %div.ui.fluid.icon.input
              = f.text_field :body
              = f.button '<i class="bordered inverted orange edit icon"></i>'.html_safe

  %div.four.wide.column
    %div.ui.fluid.raised.card.chatbox
      %div.content
        %div.ui.inverted.vertical.menu
          %a.active.item
            Home
          %a.item
            Messages
          %a.item
            Friends
