%h2.ui.center.aligned.large.header
  Welcome to Chat -
  %em
    a complete Chat App

%h4.ui.center.aligned.medium.icon.header
  %i.circular.orange.power.off.tiny.icon
  Log in to continue

%div.ui.placeholder.segment
  %div.ui.two.column.very.relaxed.stackable.grid
    %div.column
      = form_for(:session, html: { class: "ui form", role: "form" }, url: login_path) do |f|
        %div.field
          = f.label :username, 'Username'
          %div.ui.left.icon.input
            = f.text_field :username, placeholder: 'Username'
            %i.user.icon
          %div.field
            = f.label :password, 'Password'
            %div.ui.left.icon.input
              = f.password_field :password, placeholder: 'Password'
            %i.lock.icon
        = f.button 'Login', class: 'ui orange submit button'
    %div.middle.aligned.column
      %div.ui.big.orange.disabled.button
        %i.signup.icon
        Sign up
  %div.ui.vertical.divider
    Or
